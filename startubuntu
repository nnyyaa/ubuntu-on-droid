#!/data/data/com.termux/files/usr/bin/bash
cd ~
## unset LD_PRELOAD in case termux-exec is installed
unset LD_PRELOAD
command="proot"
command+=" --kill-on-exit"
command+=" --link2symlink"
command+=" -0"
command+=" -r ubuntu-fs"
command+=" -b /dev"
command+=" -b /proc"
command+=" -b ubuntu-fs/root:/dev/shm"
command+=" -b ubuntu-fs/proc/stat:/proc/stat"
command+=" -b ubuntu-fs/proc/version:/proc/version"
command+=" -b ubuntu-fs/proc/bus"
command+=" -b ubuntu-fs/proc/buddyinfo"
command+=" -b ubuntu-fs/proc/cgroups"
command+=" -b ubuntu-fs/proc/consoles"
command+=" -b ubuntu-fs/proc/crypto"
command+=" -b ubuntu-fs/proc/devices"
command+=" -b ubuntu-fs/proc/diskstats:/proc/diskstats"
command+=" -b ubuntu-fs/proc/execdomains:/proc/execdomains"
command+=" -b ubuntu-fs/proc/fb:/proc/fb"
command+=" -b ubuntu-fs/proc/filesystems:/proc/filesystems"
command+=" -b ubuntu-fs/proc/interrupts:/proc/interrupts"
command+=" -b ubuntu-fs/proc/iomem:/proc/iomem"
command+=" -b ubuntu-fs/proc/ioports:/proc/ioports"
command+=" -b ubuntu-fs/proc/kallsyms:/proc/kallsyms"
command+=" -b ubuntu-fs/proc/keys:/proc/keys"
command+=" -b ubuntu-fs/proc/kmsg:/proc/kmsg"
command+=" -b ubuntu-fs/proc/kpageflags:/proc/kpageflags"
command+=" -b ubuntu-fs/proc/loadavg"
command+=" -b ubuntu-fs/proc/locks:/proc/locks"
command+=" -b ubuntu-fs/proc/misc:/proc/misc"
command+=" -b ubuntu-fs/proc/modules:/proc/modules"
command+=" -b ubuntu-fs/proc/pagetypeinfo:/proc/pagetypeinfo"
command+=" -b ubuntu-fs/proc/partitions:/proc/partitions"
command+=" -b ubuntu-fs/proc/sched_debug:/proc/sched_debug"
command+=" -b ubuntu-fs/proc/softirqs:/proc/softirqs"
command+=" -b ubuntu-fs/proc/timer_list:/proc/timer_list"
command+=" -b ubuntu-fs/proc/uptime:/proc/uptime"
command+=" -b ubuntu-fs/proc/vmallocinfo:/proc/vmallocinfo"
command+=" -b ubuntu-fs/proc/vmstat:/proc/vmstat"
command+=" -b ubuntu-fs/proc/zoneinfo:/proc/zoneinfo"
## uncomment the following line to have access to the home directory of termux
#command+=" -b /data/data/com.termux/files/home:/root"
## uncomment the following line to mount /sdcard directly to / 
command+=" -b /sdcard"
command+=" -w /root"
command+=" /usr/bin/env -i"
command+=" HOME=/root"
command+=" MOZ_FAKE_NO_SANDBOX=1"
command+=" PATH=/usr/local/sbin:/usr/local/bin:/bin:/usr/bin:/sbin:/usr/sbin:/usr/games:/usr/local/games"
command+=" TERM=\$TERM"
command+=" LANG=zh_CN.UTF-8"
command+=" /bin/bash --login"
